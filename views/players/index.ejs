<% include ../partials/header %>
<h1>Your Team</h1>
<a href="/players/new">Add another player</a>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Capital</th>
      <th>Population</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
  <!-- edit or delete players -->

    <% players.forEach(function(player){ %>
      <tr>
      <td><a href="/players/<%= player.id%>"><%= player.name%></a></td>
      <td><%= player.capital%></td>
      <td><%= player.population%></td>
      <td><a href="/players/<%= player.id%>/edit">Edit</a></td>
      <td>
        <form action='/players/<%= player.id %>?_method=DELETE' method="POST">
          <input type="submit" value="X" class="btn btn-sm btn-danger">
        </form>
      </td>
    </tr>
    <% })%>
  </tbody>
</table>
<!-- limit at 12 players -->