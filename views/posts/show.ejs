<%= include ../partials/header %>
<!-- <script src='/javascripts/comments.js'></script> -->
<div class="">
  <h1 class=""><%= post.title  %></h1>
</div>

<div id="postShow" class="">
  <div class="item">

    <div class="small image">
      <img src="<%= post.media %>">
    </div>

    <div class="">
      <div class="header"><%= post.date %></div>
      <div class="description">
        <p><%= post.body %></p>
      </div>
      <div class="extra">
        <a class="ui center floated purple button" href="/posts/<%= post.id %>/edit">Edit</a>
        <form action="/posts/<%= post.id %>?_method=delete" method="POST" style="float:right;">
          <input class="" type="submit" value="delete">
        </form>
      </div>
    </div>
  </div>
</div>
<div class="">
  <h4 class="">Comments</h4>
</div>
<div class="">
  <a href="/posts/<%= post._id%>/comments" class="btn btn-default">See all comments</a>
  <a href="/posts/<%= post._id%>/comments/new" class="btn btn-default">Add a new comment</a>
  <!-- provide link to go back to team -->
  <a href="/teams/<%= post.team._id%>" class="btn btn-default">See Referenced Team</a>
  <a href="/posts" class="btn btn-default">Back</a>
</div>


<%= include ../partials/footer %>