<% include ../partials/header %>
  <div class="">
    <div class="column">
      <h1>Create a new comment!</h1>
      <form action="/comments" method="POST">
        <div class="">
          <div class="threeFields">
            <div class="field">
              <label for="title">Title:</label>
              <input type="text" id="title" name="post[title]" placeholder="Enter A Title" autofocus="true">
            </div>
            <div class="field">
              <label for="media">Media:</label>
              <input type="text" name="post[media]" id="media" placeholder="Image URL, Video, etc">
            </div>
          </div>
            <div class="field">
              <label for="body">Post content:</label>
              <textarea name="post[body]" id="body"></textarea>
            </div>
              <input type="hidden" name="post[author]" id="author" value="<%= author._id %>">
              <button type="submit" class="btn btn-default">Submit</button>
          </div>
        </div>
      </form>
    </div>

    
  </div>
<% include ../partials/footer %>