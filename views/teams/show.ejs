<% include ../partials/header %>
<!-- <script src='/javascripts/players.js'></script> -->

<!-- show every player of selected team -->
<a href="/teams/<%= team.id %>">Back</a>
<div id="showTeam">
  <% team.forEach(function(player) { %>
    <p><%= player.name %></p>
    <p><%= player.image %></p>

  <div class="">
  <!-- below is the button to edit player -->
      <a class="btn btn-default" href="/players/<%= player.id %>/edit">Edit</a>
      <form action="/players/<%= player.id %>?_method=delete" method="team" style="float:right;">
        <input type="submit" class="btn btn-default" value="DELETE">
      </form>
  </div>


  <% } %>
</div>


<!-- see all players etc -->
<div class="">
  <h4 class="header">Players</h4>
</div>
<div class="">
  <a href="/teams/<%= team._id%>/players" class="btn btn-default">Display Players</a>
  <a href="/teams/<%= team._id%>/players/new" class="btn btn-default">Add a new player</a>
  <!-- provide link to go back to team -->
  <a href="/teams/<%= team.id%>" class="btn btn-default">See Referenced Team</a>
  <a href="/teams" class="btn btn-default">Back</a>
</div>

<% include ../partials/footer %>